
@model OdeToFood_DotNetCore.Entities.Restaurant
@*@model OdeToFood_DotNetCore.ViewModels.RestaurantEditViewModel*@

@{
    ViewBag.Title = $"Edit {Model.Name}";
}
<h1>Edit @Model.Name</h1>

@*<form action="Edit" method="post">*@
<form asp-action="Edit" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Cuisine"></label>
        <select asp-for="Cuisine"
                asp-items="@Html.GetEnumSelectList(typeof(CuisineType))"></select>
        <span asp-validation-for="Cuisine"></span>
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
</form>
<div>
    @Html.ActionLink("Cancel", "Index")
</div>

@model OdeToFood_DotNetCore.ViewModels.HomePageViewModel

@{
    ViewBag.Title = "Home";
}

<h1>Welcome</h1>

<div>
    @*@Html.ActionLink("Create", "Create")*@
    <a asp-controller="Home" asp-action="Create">Create</a>
</div>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            
           
            <td>@restaurant.Name</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a asp-action="Edit" asp-route-id=@restaurant.Id>Edit</a>
                @Html.ActionLink("Details", "Details", new { id = @restaurant.Id })
            </td>
        </tr>
    }
</table>

@section footer{
    <div>@Model.CurrentGreetings</div>
}